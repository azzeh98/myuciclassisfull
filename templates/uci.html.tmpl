                  <td>{{if .Status}}Open{{else}}Full{{end}}</td>
                  <td><a class='deleteButton' url='/my-uci-class-is-full/term/{{.Quarter}}/{{.CourseCode}}'><i class="fa fa-trash fa-lg"></i></a></td>
